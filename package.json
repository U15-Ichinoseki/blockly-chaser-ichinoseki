{
  "name": "BlocklyCHaser",
  "version": "4.1.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dist-win": "node ./bin/mode-change.js true && electron-builder --win && node ./bin/mode-change.js false",
    "dist-mac": "node ./bin/mode-change.js true && electron-builder --mac && node ./bin/mode-change.js false"
  },
  "dependencies": {
    "blockly": "^11.1.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "http-errors": "~1.6.3",
    "log4js": "^6.2.1",
    "morgan": "~1.9.1",
    "socket.io": "^4.8.1"
  },
  "main": "electron.js",
  "build": {
    "appId": "Blockly.CHaser",
    "win": {
      "icon": "./icon.png",
      "target": {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    },
    "mac": {
      "icon": "./icon_mac.png",
      "target": {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      }
    },
    "files": [
      "./bin/*",
      "./chaser/*",
      "./config/*",
      "./language/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "./routes/*",
      "./views/**/*",
      "./tool/*",
      "./app.js",
      "./electron.js",
      "./package.json"
    ],
    "extraResources": [
      {
        "from": "./load_data",
        "to": "../load_data",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./TOS",
        "to": "../TOS"
      },
      {
        "from": "./LICENSE",
        "to": "../LICENSE"
      },
      {
        "from": "./bin/log",
        "to": "../log",
        "filter": [
          "*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  }
}
