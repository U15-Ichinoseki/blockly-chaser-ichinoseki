<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Blockly CHaser</title>
  <link rel="icon" href="/images/favicon.ico">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/menu.css' />
  <link rel='stylesheet' href='/stylesheets/menu-tutorial.css' />
  <link rel='stylesheet' href='/stylesheets/animation.css' />
  
  <%- include('./common/config-init') %>
  
  <script src="/javascripts/jquery-3.4.1.min.js"></script>

</head>
<body>
  
  <%- include('./common/config', {LNG: C_LNG}) %>

  <div class="header">
    
    <div class = "back_page">
      <div class = "back_button"><a href="../"></a></div>
    </div>
    <div class="control_area">
      <div class = "page_title">
        <h1><span class = "page_title_span">チュートリアル</span><%- title %></h1>
      </div>
      <div class = "control_button">
        <button id ="configButton" title="<%- LNG["CONFIG"] %>"></button>
      </div>
    </div>  
    
  </div>
  
  <div id="menu_area">
    <div id="stage_list">

    </div>
    <div id="stage_info">
      <div id="stage_map" class="display_off"></div>
      <div id="stage_info_condition" class="display_off">
        <span><%- LNG["CLEAR_CONDITION"] %></span>
        <div id="stage_info_hart" class="stage_info_data"><%- LNG["INFO_HART_B"] %><div id="stage_info_hart_data" class="stage_info_data_inline"></div><%- LNG["INFO_HART_A"] %></div>
        <div id="stage_info_put" class="stage_info_data"><%- LNG["INFO_PUT"] %></div>
        <div id="stage_info_block" class="stage_info_data"><%- LNG["INFO_BLOCK_B"] %><div id="stage_info_block_data" class="stage_info_data_inline"></div><%- LNG["INFO_BLOCK_A"] %></div>
        <div id="stage_info_turn" class="stage_info_data"><div id="stage_info_turn_data" class="stage_info_data_inline"></div><%- LNG["INFO_TURN"] %></div>
      </div>
      <div id="stage_join_div" class="display_off"></div>
    </div>
    <div id="stage_info_name" class="display_off"><div>
  </div>
  <script src="/javascripts/menu-tutorial.js"></script>

</body>
</html>