<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="google" value="notranslate">
  <title>Blockly Demo:</title>
  
  <script>
    var satage_data = <%- JSON.stringify(stagedata) %>;
    var reset_data = <%- JSON.stringify(stagedata) %>;
  </script>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/blockly_compressed.js"></script>
  <script src="/javascripts/blocks_compressed.js"></script>
  
  <script src="/javascripts/javascript_compressed.js"></script>
  
  <script src = "/javascripts/blocks/tutorial_mode_block.js" ></script> 
  <script src = "/javascripts/generators/javascript/tutorial_mode.js" ></script>
  <script src="/javascripts/acorn_interpreter.js"></script>

  <script src="/javascripts/code.js"></script>
  <script src="/javascripts/tutorial_board.js"></script>


  <link rel='stylesheet' href='/stylesheets/blockly.css' />
  <link rel='stylesheet' href='/stylesheets/tutorial.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <div class="header">
    <div class = "back_page">
      <div class = "back_button"><a href="/menu-programming"></a></div>
    </div>
    <div class="control_area">
      <div class = "page_title">
        <h1><span class = "page_title_span">プログラミング</span><%- title %></h1>
      </div>
      <div class = "control_button">
        <button id="runButton" class="notext" title="実行">
          
        </button>
        <button id="stopButton" class="notext" title="停止">
          
        </button>
        <button id="trashButton" class="notext" title="ブロックをすべて削除">
          
        </button>
        <button id="downloadButton" class="notext" title="保存">
          
        </button>
        <label for="file_load">
          <input type="file" id="file_load" style="display:none;">
        </label>
      </div>
    </div>  
    
    <div class="farSide">
      <select id="languageMenu"></select>
    </div>
    
    
  </div>
  <div class="left_area">
    <div class="tab_area">
      <ul class="blockly_menu">
        <li id="tab_blocks" class="tabon">ブロック</li>
        <li id="tab_javascript" class="taboff">javascript</li>
        <li id="tab_xml" class="taboff">xml</li>
      </ul>
    </div>

    <div class="blockly_area" id="content_area"></div>
    
    <div id="content_blocks" class="content"></div>
    <pre id="content_javascript" class="content lang-js"></pre>
    <textarea id="content_xml" class="content" wrap="off"></textarea>
  </div>
  
  <div class="right_area">

    <div class="game_area">
      <div id="game_board"></div>
      <div id="game_info">
        <div id="block_limit_area">
            あと <div id="capacity"></div> ブロック使えます
        </div>
          
      </div>
    </div>
    <textarea class="console_area" id="output" disabled="disabled"></textarea>
    
  </div>
  
  <script src="/javascripts/enn.js"></script>
  <script>
    makeTable("game_board");
  </script>
  
  <%- blockly_xml %>


</body>
</html>